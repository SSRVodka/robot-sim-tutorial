<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   <xacro:include filename="$(find robot-desc)/urdf/common_inertia.xacro" />
    <xacro:macro name="wheel_xacro" params="wheel_name xyz">
        <link name="${wheel_name}_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="1.57079 0 0" />
                <geometry>
                    <cylinder length="0.04" radius="0.032" />
                </geometry>
                <material name="black">
                    <color rgba="0.0 0.0 0.0 0.8"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="1.57079 0 0" />
                <geometry>
                    <cylinder length="0.04" radius="0.032" />
                </geometry>
                <material name="black">
                    <color rgba="0.0 0.0 0.0 0.8"/>
                </material>
            </collision>
            <xacro:cylinder_inertia m="0.1" h="0.04" r="0.032"/>
        </link>

        <!-- 为轮胎配置 Gazebo 虚拟环境中的摩擦力属性 -->
        <gazebo reference="${wheel_name}_wheel_link">
            <!-- 切向动摩擦因数 -->
            <mu1 value="20.0" />
            <!-- 法向动摩擦因数 -->
            <mu2 value="20.0" />
            <!-- 刚度系数 -->
            <kp value="1000000000.0" />
            <!-- 阻尼系数 -->
            <kd value="1.0" />
        </gazebo>

        <joint name="${wheel_name}_wheel_joint" type="continuous">
            <parent link="base_link" />
            <child link="${wheel_name}_wheel_link" />
            <origin xyz="${xyz}" />
            <!-- 表示轮子会绕 y 轴旋转 -->
            <axis xyz="0 1 0" />
        </joint>
    </xacro:macro>
</robot>
