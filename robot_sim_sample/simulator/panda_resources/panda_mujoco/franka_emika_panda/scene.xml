<mujoco model="panda scene">
  <include file="panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
  </worldbody>
  <worldbody>
    <!-- 独立添加的预定义物体 -->
    <body name="box" pos="0.6 -0.2 0.1">
      <freejoint/> <!-- 允许物体自由运动 -->
      <geom type="box" size="0.03 0.03 0.08" rgba="1 0 0 1" friction="2.2 0.2 0.2"/>
    </body>
    <body name="table" pos="0.6 -0.2 0">
      <geom type="box" size="0.25 0.25 0.1" rgba="0 0 1 1" friction="1.2 0.2 0.2"/>
    </body>

    <!-- （长宽0.5×0.5，高0.3，开口0.4×0.4，深0.2） -->
    <body name="container" pos="0.4 0.3 0.15">
      <!-- 容器底部 (0.4×0.4) -->
      <geom name="base" type="box" size="0.2 0.2 0.01" 
            pos="0 0 -0.09" rgba="0.1875 0.5 0.078 1"/>
      <geom name="front_wall" type="box" size="0.2 0.025 0.1" 
            pos="0 0.175 -0.09" rgba="0.1875 0.5 0.078 1"/>
      <geom name="back_wall" type="box" size="0.2 0.025 0.1" 
            pos="0 -0.175 -0.09" rgba="0.1875 0.5 0.078 1"/>
      <geom name="left_wall" type="box" size="0.025 0.2 0.1" 
            pos="-0.175 0 -0.09" rgba="0.1875 0.5 0.078 1"/>
      <geom name="right_wall" type="box" size="0.025 0.2 0.1" 
            pos="0.175 0 -0.09" rgba="0.1875 0.5 0.078 1"/>
    </body>

    <body name="world_cam" pos="1.2 0 0.75">
      <!-- <camera name="world_camera" pos="0 0 0"
              euler="-1.57 1.57 0" mode="fixed" fovy="60"/> -->
      <!-- <camera name="world_camera" pos="0 0 0"
              xyaxes="0 -1 0 0 0 -1" mode="fixed" fovy="60"/> -->
      <camera name="world_camera" pos="0 0 0"
              xyaxes="0 -1 0   0.5 0 -0.866" mode="fixed" fovy="60"/>
    </body>

    <!-- <body name="sphere" pos="0.5 0 0.3">
      <freejoint/>
      <geom type="sphere" size="0.08" rgba="0 1 0 1"/>
    </body> -->
  </worldbody>
</mujoco>
